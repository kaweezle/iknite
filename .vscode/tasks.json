{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "golangci-lint",
      "type": "shell",
      "command": "golangci-lint",
      //"args": ["run", "--enable-only", "godot"],
      "args": ["run", "--fix"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      // "problemMatcher": ["$go"],
      "problemMatcher": {
        "owner": "golangci-lint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "detail": "Run golangci-lint",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "golangci-fmt",
      "type": "shell",
      "command": "golangci-lint",
      "args": ["fmt"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      // "problemMatcher": ["$go"],
      "problemMatcher": {
        "owner": "golangci-lint-fmt",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "detail": "Run golangci-lint format"
    },
    {
      "label": "go mod tidy",
      "type": "shell",
      "command": "go",
      "args": ["mod", "tidy"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$go"],
      "detail": "Run go mod tidy"
    },
    {
      "label": "pre-commit",
      "type": "shell",
      "command": "pre-commit",
      "args": ["run"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "Run pre-commit hooks",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "goreleaser-build",
      "type": "shell",
      "command": "goreleaser",
      "args": ["build", "--single-target", "--auto-snapshot", "--clean"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "GOOS": "linux",
          "GOARCH": "amd64"
        }
      },
      "problemMatcher": ["$go"],
      "detail": "Run goreleaser to build the project"
    },
    {
      "label": "goreleaser",
      "type": "shell",
      "command": "goreleaser",
      "args": ["--auto-snapshot", "--skip=publish", "--clean"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$go"],
      "detail": "Run goreleaser to build the project"
    },
    {
      "label": "test with coverage",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "-v",
        "-race",
        "-covermode=atomic",
        "-coverprofile=coverage.out",
        "./..."
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": ["$go"],
      "detail": "Run go tests with coverage"
    }
  ]
}
