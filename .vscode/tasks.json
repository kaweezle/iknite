{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "golangci-lint",
      "type": "shell",
      "command": "golangci-lint",
      //"args": ["run", "--enable-only", "godot"],
      "args": ["run", "--fix"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"],
      "detail": "Run golangci-lint with godot enabled"
    }
  ]
}
